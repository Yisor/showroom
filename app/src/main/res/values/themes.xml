<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="appTextView"
        parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">加载中...</item>
    </style>

    <style name="appEditText"
        parent="@android:style/Widget.EditText">
        <!--<item name="android:background">@drawable/shp_login_input_bg</item>-->
        <item name="android:padding">28px</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/txtColorHint</item>
    </style>



    <style name="appListView"
        parent="@android:style/Widget.AbsListView">
        <item name="android:clipToPadding">false</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:divider">@color/dividerColor</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.Dialog"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/txtColor</item>
    </style>

    <style name="appDialog"
        parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:gravity">center</item>
    </style>

    <!-- Application theme. -->
    <style name="ZTAppTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!--.Light.NoActionBar-->
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/transparent</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/transparent</item>
        <!--各控制元件(如：check box、switch 或是 radoi) 被勾选 (checked) 或是选定 (selected) 的颜色-->
        <item name="colorAccent">@color/txtColor</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--App bar 上的标题与更多菜单中的文字颜色-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/transparent</item>

        <!--Navigation bar color(for v21)-->
        <!--<item name="android:navigationBarColor">@color/accent_material_light</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item><!-- 使用 API Level 22 編譯的話，要拿掉前綴字android: -->
        <item name="android:windowNoTitle">true</item>

        <item name="android:textViewStyle">@style/appTextView</item>
        <item name="android:editTextStyle">@style/appEditText</item>
        <item name="android:listViewStyle">@style/appListView</item>

        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="ZTFullscreen"
        parent="@style/ZTAppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.ActivityDialog"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">false</item>//dialog会自适应
    </style>

</resources>